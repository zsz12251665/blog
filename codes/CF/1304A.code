var
	t,ti:integer;
	x,y,a,b:longint;
begin
	read(t);
	for ti:=1 to t do
		begin
			read(x,y,a,b);
			if (y>=x) and ((y-x) mod (a+b)=0) then
				writeln((y-x) div (a+b))
			else
				writeln(-1);
		end;
end.

#include<cstdio>
using namespace std;
int main()
{
	int t;
	for(scanf("%d",&t);t>0;--t)
	{
		long x,y,a,b;
		scanf("%ld%ld%ld%ld",&x,&y,&a,&b);
		printf("%ld\n",(y>=x && (y-x)%(a+b)==0)?(y-x)/(a+b):-1);
	}
	return 0;
}
